
<%layout("/layouts/boilerplate") %>


<div class="row offset-2 mt-2">
  <h3>Create a New Listing</h3>

  <div class="col-8 ">
    <form method="post" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">title</label>
        <input
          type="text"
          class="form-control"
          name="listing[title]"
          placeholder="Enter title"
          required
        />
        <div  class="invalid-feedback">
          Please select a valid title.
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">description</label>
        <textarea name="listing[description]" class="form-control" ></textarea>
      </div>

      
        <div class="mb-3">
          <label for="img" class="form-label">img</label>
          <input
            type="file"
            class="form-control"
            name="listing[image]"
            placeholder="Enter image URL/link"
         
          />
        <div  class="invalid-feedback">
          Please select a valid image.
        </div>
      </div>

      <div class="row">

        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">price</label>
          <input
            type="number"
            class="form-control"
            name="listing[price]"
            placeholder="Enter Price"
            required
          />
          <div  class="invalid-feedback">
            Please select a valid price.
          </div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">country</label>
          <input
            type="text"
            class="form-control"
            name="listing[country]"
            placeholder="Enter country"
            required
          />
          <div  class="invalid-feedback">
            Please select a valid country.
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">location </label>
        <input
          type="text"
          class="form-control"
          name="listing[location]"
          placeholder="Enter location"
          required
        />
        <div class="invalid-feedback">
          Please select a valid location.
        </div>
      </div>

      <button class="btn btn-dark">Add</button>
    </form>
  </div>
</div>
